{
	"name": "ft_transcendence_backend",
	"version": "1.0.0",
	"description": "Backend for ft_transcendence project",
	"main": "dist/server.mjs",
	"type": "module",
	"scripts": {
		"build": "tsc",
		"start": "node dist/server.mjs",
		"dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node --esm src/server.ts'",
		"lint": "eslint . --ext .ts",
		"db:migrate": "node --loader ts-node/esm ./node_modules/.bin/knex migrate:latest --knexfile knexfile.cjs",
		"db:rollback": "node --loader ts-node/esm ./node_modules/.bin/knex migrate:rollback --knexfile knexfile.cjs",
		"db:seed": "node --loader ts-node/esm ./node_modules/.bin/knex seed:run --knexfile knexfile.cjs",
		"db:status": "node --loader ts-node/esm ./node_modules/.bin/knex migrate:status --knexfile knexfile.cjs",
		"db:make-migration": "node --loader ts-node/esm ./node_modules/.bin/knex migrate:make --knexfile knexfile.cjs",
		"db:make-seed": "node --loader ts-node/esm ./node_modules/.bin/knex seed:make --knexfile knexfile.cjs",
		"db:reset": "node --loader ts-node/esm ./node_modules/.bin/knex migrate:rollback --all --knexfile knexfile.cjs && node --loader ts-node/esm ./node_modules/.bin/knex migrate:latest --knexfile knexfile.cjs && node --loader ts-node/esm ./node_modules/.bin/knex seed:run --knexfile knexfile.cjs",
		"test": "jest"
	},
	"dependencies": {
		"@fastify/cookie": "^8.3.0",
		"@fastify/cors": "^8.3.0",
		"@fastify/swagger": "^8.10.0",
		"@fastify/swagger-ui": "^1.9.2",
		"ajv-formats": "^2.1.1",
		"bcryptjs": "^2.4.3",
		"dotenv": "^16.3.1",
		"fastify": "^4.23.2",
		"jsonwebtoken": "^9.0.2",
		"knex": "^3.1.0",
		"prom-client": "^14.1.0",
		"sqlite": "^5.0.1",
		"sqlite3": "^5.1.7",
		"speakeasy": "^2.0.0",
		"qrcode": "^1.5.3",
		"uuid": "^9.0.1"
	},
	"devDependencies": {
		"@types/bcryptjs": "^2.4.6",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/knex": "^0.15.2",
		"@types/node": "^20.6.2",
		"@types/qrcode": "^1.5.5",
		"@types/uuid": "^9.0.7",
		"@typescript-eslint/eslint-plugin": "^6.7.0",
		"@typescript-eslint/parser": "^6.7.0",
		"eslint": "^8.49.0",
		"jest": "^29.7.0",
		"nodemon": "^3.0.1",
		"ts-jest": "^29.1.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.2.2"
	}
}
